<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".presentation.fragments.task.TaskFragment">


    <ImageView
        android:id="@+id/imCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/label_light_primary"
        android:contentDescription="@string/close_add_return_to_main_screen" />

    <TextView
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_string"
        android:textAllCaps="true"
        android:textColor="@color/color_light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/imCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imCancel" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imCancel">

        <EditText
            android:id="@+id/edTodoItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/todo_item_text_hint"
            android:inputType="textMultiLine"
            android:lines="3" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/flImportanceMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <View
            android:id="@+id/vPopupMenuAnchor"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/importance_text"
            android:textColor="@color/label_light_primary" />

        <TextView
            android:id="@+id/tvImportanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет"
            android:textColor="@color/label_light_tertiary" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/support_light_separator"
        app:layout_constraintTop_toBottomOf="@+id/flImportanceMenu"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayoutDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <Switch
            android:id="@+id/swDeadline"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDeadlineDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDeadlineText" />

        <TextView
            android:id="@+id/tvDeadlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/done_before"
            android:textColor="@color/label_light_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDeadlineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_light_blue"
            app:layout_constraintStart_toStartOf="@+id/tvDeadlineText"
            app:layout_constraintTop_toBottomOf="@+id/tvDeadlineText"
            tools:text="1 января 1970" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="@color/support_light_separator"
        app:layout_constraintTop_toBottomOf="@+id/constrainLayoutDatePicker"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/ic_delete"
        app:tint="@color/label_light_disable"
        android:contentDescription="@string/delete_image_button" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/delete_string"
        android:textColor="@color/label_light_disable"
        app:layout_constraintBottom_toBottomOf="@+id/imDelete"
        app:layout_constraintStart_toEndOf="@+id/imDelete"
        app:layout_constraintTop_toTopOf="@+id/imDelete" />
</androidx.constraintlayout.widget.ConstraintLayout>